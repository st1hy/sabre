<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/default_dark</item>
        <item name="android:textColorSecondary">@color/default_dark</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/AppTheme.TranslucentDarkActionBar</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ImageAppTheme" parent="Base.Theme.AppCompat">
        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/AppTheme.TranslucentDarkActionBar</item>
        <item name="android:textColorPrimary">@color/default_light</item>
        <item name="android:textColorSecondary">@color/default_light</item>
        <!--<item name="android:windowBackground">@color/image_surface_background</item>-->
    </style>

    <style name="DarkFloatingActionButtonIcon" >
        <item name="lmd_state">@xml/fab_icon_states</item>
        <item name="lmd_curState">0</item>
        <item name="lmd_padding">2dp</item>
        <item name="lmd_animDuration">300</item>
        <item name="lmd_interpolator">@android:anim/accelerate_decelerate_interpolator</item>
        <item name="lmd_strokeSize">4dp</item>
        <item name="lmd_strokeColor">#FF000000</item>
        <item name="lmd_strokeCap">round</item>
        <item name="lmd_strokeJoin">round</item>
        <item name="lmd_clockwise">true</item>
    </style>

    <style name="LightFABWave" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="fab_backgroundColor">#FFDFDFDF</item>
        <item name="fab_elevation">1dp</item>
        <item name="fab_iconLineMorphing">@style/DarkFloatingActionButtonIcon</item>
        <item name="rd_delayClick">none</item>
    </style>
    <style name="AppTheme.TranslucentDarkActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/actionBarBackground</item>

    </style>

</resources>