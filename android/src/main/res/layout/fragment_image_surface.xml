<FrameLayout
    android:id="@+id/main_activity_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".image.ImageActivity"
    >

    <com.github.st1hy.sabre.image.surface.ImageSurfaceViewer
        android:id="@+id/image_viewer_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        />

    <com.rey.material.widget.ProgressView
        android:id="@+id/fragment_image_viewer_progress_bar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:pv_autostart="true"
        app:pv_circular="true"
        app:pv_progressStyle="@style/AppTheme.CircularProgress"
        app:pv_progressMode="indeterminate"
        android:layout_gravity="center"
        />
</FrameLayout>
