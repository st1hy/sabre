<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <fragment
        android:id="@+id/image_gdx_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_image_gl"
        class="com.github.st1hy.sabre.image.gdx.GdxImageViewerFragment"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
    </LinearLayout>


    <com.rey.material.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_fab"
        style="@style/FloatingButton"
        android:layout_margin="8dp"
        android:layout_gravity="right|bottom"
        app:fab_iconSrc="@drawable/ic_content_cut_white_24dp"
        />
</FrameLayout>