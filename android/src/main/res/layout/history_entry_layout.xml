<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/history_material_frame"
    app:mrl_rippleColor="@color/history_entry_ripple_foreground"
    app:mrl_rippleInAdapter="false"
    app:mrl_rippleOverlay="true"
    app:mrl_rippleAlpha="0.1"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:paddingRight="@dimen/content_left_right_padding"
            android:paddingStart="14dp"
            android:paddingEnd="@dimen/content_left_right_padding"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            >
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="0dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/card_background"
                >
                <ImageView
                    android:id="@+id/entry_image"
                    android:layout_width="@dimen/history_thumb_size"
                    android:layout_height="@dimen/history_thumb_size"
                    android:scaleType="centerCrop"
                    />
            </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <com.rey.material.widget.TextView
                    android:id="@+id/entry_resource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/textAppearanceMedium"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    tools:text="Name"
                    />
                <com.rey.material.widget.TextView
                    android:id="@+id/entry_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/textAppearanceSmall"
                    tools:text="Description"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/setting_separator"
            />
    </LinearLayout>
</com.balysv.materialripple.MaterialRippleLayout>