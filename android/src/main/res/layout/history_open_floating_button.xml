<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".gdx.history.HistoryFragment"
    android:padding="8dp">
    <com.rey.material.widget.TextView
        android:id="@+id/text_open_image_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/start_instructions"
        android:layout_gravity="center"/>

    <com.rey.material.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/open_image_button"
        style="@style/AppTheme.FloatingButton"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_gravity="center"
        android:onClick="onActionOpen"
        app:fab_iconSrc="@drawable/ic_open"/>
</LinearLayout>