<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/setting_widget"
            android:layout_toLeftOf="@+id/setting_widget"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            >
            <com.rey.material.widget.TextView
                android:id="@+id/text_setting_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/textAppearanceMedium"
                android:text="Title"
                />
            <com.rey.material.widget.TextView
                android:id="@+id/text_setting_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/textAppearanceSmall"
                android:text="Subtitle"
                />
        </LinearLayout>
        <FrameLayout
            android:id="@+id/setting_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <com.rey.material.widget.CheckBox
                android:id="@+id/setting_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:saveEnabled="false"
                />
        </FrameLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/setting_separator"
        />
</LinearLayout>